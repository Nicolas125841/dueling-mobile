            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9A7C6969"
            android:visibility="visible">

            <ImageView
                android:id="@+id/token"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/token" />

            <Button
                android:id="@+id/dieRoll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/token"
                android:text="Roll Dice" />

            <Button
                android:id="@+id/coinFlip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dieRoll"
                android:text="Flip Coin" />

            <Button
                android:id="@+id/shuffleDeck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/coinFlip"
                android:text="Shuffle Deck" />

            <Button
                android:id="@+id/shuffleHand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shuffleEDeck"
                android:text="Shuffle Hand" />

            <Button
                android:id="@+id/shuffleEDeck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shuffleDeck"
                android:text="Shuffle Extra Deck" />

            <Button
                android:id="@+id/surrenderButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shuffleHand"
                android:text="Surrender" />

            <Button
                android:id="@+id/resetButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/surrenderButton"
                android:text="Reset" />

            <Button
                android:id="@+id/sideDeckButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/resetButton"
                android:text="Side" />

            <Button
                android:id="@+id/showHand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sideDeckButton"
                android:text="Show Hand" />

            <Button
                android:id="@+id/showEdeck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/showHand"
                android:text="Show EDeck" />

            <EditText
                android:id="@+id/numToReveal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/showEdeck"
                android:inputType="number"
                android:text="1"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/showTopDeck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/showEdeck"
                android:layout_toRightOf="@id/numToReveal"
                android:text="Show Deck" />

            <Switch
                android:id="@+id/canShowButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/showTopDeck"
                android:layout_centerHorizontal="true"
                android:text="Hide Non Essential Buttons"
                android:textColor="#FFFFFF" />

            <RelativeLayout
                android:id="@+id/bufferforcont"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@id/showTopDeck"
                android:background="#9A7C6969"></RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/exitGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AD8D8282"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="EXIT" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/resetGameBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AD8D8282"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/resetConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="RESET" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sideCardsB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AD8D8282"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/sideConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="SIDE" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatcon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/msgscrol"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@id/sendMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/msgpadcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/msglist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/msgpadding"
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"
                    android:orientation="vertical" />

            </LinearLayout>

        </ScrollView>

        <EditText
            android:id="@+id/sendMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:ems="10"
            android:hint="Type Here:"
            android:imeOptions="actionDone"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/deckInOpt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80747373"
        android:elevation="10dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/shufbut"
            android:layout_centerHorizontal="true"
            android:text="Where to place card?"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/shufbut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/topbut"
            android:layout_centerVertical="false"
            android:text="Random/Shuffle" />

        <Button
            android:id="@+id/topbut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Top" />

        <Button
            android:id="@+id/botbut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topbut"
            android:text="Bottom" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/coverforgame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1AF8F8F8"
        android:elevation="11dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/moveani"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:elevation="30dp"
        app:layout_constraintBottom_toBottomOf="@id/handcont"
        app:layout_constraintEnd_toEndOf="@id/field"
        app:layout_constraintStart_toStartOf="@id/field"
        app:layout_constraintTop_toTopOf="@id/handcont2">

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_home_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>